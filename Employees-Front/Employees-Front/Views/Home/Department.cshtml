@model List<Department>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Departments</h1>
    <!-- <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> -->
</div>

<div class="card">

    <div class="card-body">
        <a asp-action="DepartmentForm" asp-controller="Home" asp-route-departmentID="0" class="btn btn-success btn-sm">New Department</a>
        <!-- <a asp-action="test" asp-controller="Home" class="btn btn-success">test</a> -->
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepartmentID</td>
                        <td>@item.DepartmentName</td>
                        <td>
                            <a asp-action="DepartmentForm" asp-controller="Home" asp-route-departmentID="@item.DepartmentID" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="Delete" asp-controller="Department" asp-route-departmentID="@item.DepartmentID" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
