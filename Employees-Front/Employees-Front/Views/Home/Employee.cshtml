@model List<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Employees</h1>
</div>

<div class="card">
    <div class="card-body">
        <a asp-action="EmployeeForm" asp-controller="Home" asp-route-EmployeeID="0" class="btn btn-success btn-sm">New Employee</a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>DNI</th>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeID</td>
                        <td>@item.EmployeeDNI</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.EmployeeLastName</td>
                        <td>
                            <a asp-action="EmployeeForm" asp-controller="Home" asp-route-EmployeeID="@item.EmployeeID" class="btn btn-primary btn-sm">Update</a>
                            <a asp-action="Delete" asp-controller="Employee" asp-route-EmployeeID="@item.EmployeeID" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
