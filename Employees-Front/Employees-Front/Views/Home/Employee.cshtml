@model List<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Employees</h1>
    <!-- <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> -->
</div>

<div class="card">

    <div class="card-body">
        <a asp-action="DepartmentForm" asp-controller="Home" asp-route-departmentID="0" class="btn btn-success btn-sm">New Employee</a>
        <!-- <a asp-action="test" asp-controller="Home" class="btn btn-success">test</a> -->
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>DNI</th>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeID</td>
                        <td>@item.EmployeeDNI</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.EmployeeLastName</td>
                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
